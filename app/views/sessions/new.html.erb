<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="field">
    <%= check_box_tag :remenber_me, 1, params[:remenber_me] %>
    <%= label_tag :remenber_me %>
  </div>

  <div sclass="actions"><%= submit_tag "Log in" %></div>

<% end %>
